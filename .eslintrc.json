{
  "extends": [
    "prettier-standard/prettier-file",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:import/react",
    "plugin:security/recommended"
  ],
  "plugins": ["react", "react-hooks", "security", "import"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "^16.12.0"
    },
    "import/resolver": {
      "parcel": {
        "rootDir": "src",
        "extensions": [".js", ".jsx", ".svg", ".png", ".jpeg"]
      }
    }
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "security/detect-object-injection": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ]
  }
}
